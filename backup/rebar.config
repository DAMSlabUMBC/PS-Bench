{erl_opts, [debug_info]}.
{deps, [
    {emqtt, {git, "https://github.com/emqx/emqtt", {tag, "1.14.5"}}},
    {erlport, {git, "https://github.com/erlport/erlport", {branch, "master"}}}
]}.

{shell, [
    {config, "configs/ps_bench.config"},
    {apps, [mnesia, ps_bench]}
]}.

{relx, [
    {release, {ps_bench, "0.1.0"}, [ps_bench, sasl, mnesia, runtime_tools]},
    {sys_config, "configs/ps_bench.config"},
    {vm_args_src, "configs/vm.args"}, 
    {dev_mode, false},
    {include_erts, true},
    {extended_start_script, true}
]}.
